<%= form_for [@entry, @comment], remote: true do |f| %>
  <div>
    <%= f.text_field :content, class: "form-control commentbox",
    autofocus: true, :id => "commentbox" %>
  </div>
  <div>
    <%= button_to (f.object.new_record? ? t(".create") : t(".update")),
    entry_comments_path(entry_id: @entry), remote: true,
    class: "btn btn-primary col-md-4" %>
  </div>
  <div class="clearfix"></div>
<% end %>
